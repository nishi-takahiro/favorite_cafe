<div class = "container">
    <div class = "row">
        <div class = "col-sm-12 col-mg-11 col-lg-10 px-sm-0 m-3">
            <h5 class = "col-lg-3 m-5">タグ編集</h5>
            
            <%= form_with model: @tag, url: admin_tag_path, method: :patch do |f| %>
                <div class = "row ">
                    <div class = "col-sm-12 col-mg-8 col-lg-7">
                        <div class = "row">
                            <div class = "col-lg-2">タグ名</div>
                            <div class = "col-lg-4">
                                <div class = "form-group">
                                    <div class = "field">
                                        <%= f.text_field :tag, autofocus: true %>
                                    </div>
                                </div>
                            </div>
                            <div class = "col-lg-3"><%= f.submit "変更を保存", style: "width:150", class: "btn btn-success" %></div>
                            <div class = "col-sm-6 col-mg-4 col-lg-3 ">
                               <%= link_to admin_tag_path(@tag), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                               <i>削除</i>
                               <% end %>
                           </div>
                        </div>
                    </div>
                </div>
            <% end %>
            
        </div>
    </div>
</div>
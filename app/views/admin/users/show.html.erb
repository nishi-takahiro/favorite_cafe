<h1>Admin::Users#show</h1>
<p>Find me in app/views/admin/users/show.html.erb</p>

<div class = "container">
    <div class = "row "><%= notice %></div>
    
    <!--ユーザー会員情報-->
    <!--ユーザー会員詳細-->
      <div class = "col-sm-12 col-mg-6 col-lg-4">
        <div class = "row">
            <h5 class = "col-sm-12 col-mg-10 col-lg-9">
                <strong><%= @user.last_name %><%= @user.first_name %></strong>さんの<strong>会員詳細</strong>
            </h5>
        </div>
            
        <div class = "row">
            <div class = "col-sam-12 col-mg-12 col-lg-12">
                <div class = "row m-2">
                    <div class = "col-sm-12 col-mg-12 col-lg-12">
                        <strong><会員ID></strong><%= @user.id %>
                    </div>
                </div>
                <div class = "row m-2">
                    <div class = "col-sm-12 col-mg-12 col-lg-12 ">
                        <strong><氏名></strong><br><%= @user.last_name %>　<%= @user.first_name %>
                    </div>
                </div>
                  <div class = "row m-2">
                    <div class = "col-sm-12 col-mg-12 col-lg-12 ">
                        <strong><フリガナ></strong><br><%= @user.last_name_kana %>　<%= @user.first_name_kana %>
                    </div>
                </div>
                  <div class = "row m-2">
                    <div class = "col-sm-12 col-mg-12 col-lg-12">
                        <strong><メールアドレス></strong><br><%= @user.email %>
                    </div>
                </div>
                 <div class = "row m-2">
                    <div class = "col-sm-12 col-mg-12 col-lg-12 "><strong><会員ステータス></strong></div>
                     <div class = "col-sm-12 col-mg-12 col-lg-12 text-success">
                         <% if @user.is_deleted %>
                         <div style = "color:#808080">
                         <%= "退会" %>
                         </div>
                         <% else %>
                         <%= "有効" %>
                         <% end %>
                     </div>
                </div>
                
                 <div class = "row m-3">
                     <div class = "col-sm-12 col-mg-12 col-lg-12">
                         <%= link_to "編集する",  edit_admin_user_path(@user), class: "btn btn-success", style: "width:150" %>
                     </div>
                     <div class = "col-sm-12 col-mg-12 col-lg-12">
                       <%= link_to  admin_articles_path, class: "btn btn-primary", style: "width:170" do %>
                       <%= @user.last_name %>さんの投稿一覧
                       <% end %>
                     </div>
                </div>
                
            </div>
        </div>
    </div>
    
    <!--ユーザー会員投稿一覧-->
    
</div>
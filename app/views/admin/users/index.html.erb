<div class = "container">
    <div class = "row m-4">
        <h4 class = "col-sm-6 col-mg-6 col-lg-6 font-weight-bold">会員一覧</h4>
    </div>
    <div clss = "row">
      <div class = "col-sm-12 col-md-12 col-lg-12">
          <div class = "col-sm-12 col-mg-12 col-lg-12">
            
                <table class = "table">
                    <thead>
                        <tr>
                            <th scope = "col">会員ID</th>
                            <th scope = "col">氏名</th>
                            <th scope = "col">カナ</th>
                            <th scope = "col">メールアドレス</th>
                            <th scope = "col">ステータス</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% @users.each do |users| %>
                        <tr>
                            <td>
                                <%= users.id %> 
                                <%= link_to admin_user_path(users) do %>
                            　　　　<% if users.profile_image.attached? %>
                                        <%= image_tag users.profile_image, size: "100x100" %>
                                    <% else %>
                                        <%= image_tag "no_image.jpg", size: "100x100" %>
                                    <% end %>
                                <% end %>
                            </td>
                            <td> 
                                <%= link_to admin_user_path(users) do %>
                                  <%= users.full_name %>
                                <% end %>
                            </td>
                            <td> 
                               <%= users.last_name_kana %> <%= users.first_name_kana %>
                            </td>
                            <td><%= users.email %></td>
                            <td class = "text-success">
                                <% if users.is_deleted %>
                                  <div style = "color:#808080"><%= "退会" %></div>
                                <% else %>
                                  <%= "有効" %>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <div class = "m-4"><%= paginate @users %></div>
           </div>
      </div>
       
        
      </div>
    </div> 
</div>
<div class = "container">
  <p class= "notice"><%= notice %></p>
  <div class = "row">
    <div class = "col-sm-12 col-md-12 col-lg-12 ">
      <h4 class = "m-3">新規会員登録</h4>
    </div>
  </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-2">名前</div>
        <div class = "col-sm-12 col-md-4 col-lg-4">
          <div class = "form-group">
            <div class = "field text-right">
              (性) <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
          </div>
        </div>
        <div class = "col-sm-12 col-md-4 col-lg-4">
          <div class = "form-group">
            <div class = "field text-right">
              (名) <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </div>
        </div>
      </div>
       <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-2">フリガナ</div>
        <div class = "col-sm-12 col-md-4 col-lg-4">
          <div class = "form-group">
            <div class = "field text-right">
              (セイ) <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
          </div>
        </div>
        <div class = "col-sm-12 col-md-4 col-lg-4">
          <div class = "form-group">
            <div class = "field text-right">
              (メイ) <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </div>
        </div>
      </div>
      <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-2">メールアドレス</div>
        <div class = "col-sm-12 col-md-4 col-lg-6">
          <div class = "form-group">
            <div class = "field text-right">
              <%= f.text_field :email, size:45, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>
      </div>
      <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-2"> 
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %></div>
        <div class = "col-sm-12 col-md-4 col-lg-4">
          <div class = "form-group">
            <div class = "field text-right">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
      </div>
       <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-2"> 
          <%= f.label :password_confirmation %>
        </div>
        <div class = "col-sm-12 col-md-4 col-lg-4">
          <div class = "form-group">
            <div class = "field  text-right">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
      </div>
    
    
    <div class = "row">
      <div class = "col-sm-12 col-md-4 col-lg-4">
         <div class="actions">
           <%= f.submit "Sign up", class:"btn btn-success" %>
         </div>
         <% end %>
      </div>
    </div>
    <div class = "row">
      <%= render "public/shared/links" %>
    </div>
  </div>
